<h2 class="text-center my-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.select :category, User.categories.keys.map { |c| [c.capitalize, c] }, { prompt: 'Select a category' }, { class: 'form-control', required: true } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :avatar, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>
  </div>

  </br>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
