<!-- app/views/admin/users/show.html.erb -->

<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h1 class="card-title mb-0">User Details</h1>
    </div>
    <div class="card-body">
      <% if @user.avatar.attached? %>
        <div class="text-left">
          <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]).processed, class: "img-fluid rounded-circle ms-50 my-2" %>
        </div>
      <% end %>
      <div class="row mb-3">
        <div class="col-sm-3"><strong>Email:</strong></div>
        <div class="col-sm-9"><%= @user.email %></div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-3"><strong>Category:</strong></div>
        <div class="col-sm-9">
          <span class="badge <%= user_category_badge(@user) %>">
            <%= @user.category.capitalize %>
          </span>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-3"><strong>Status:</strong></div>
        <div class="col-sm-9">
          <span class="badge <%= @user.status? ? 'bg-success' : 'bg-danger' %>">
            <%= @user.status? ? 'Enabled' : 'Disabled' %>
          </span>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-3"><strong>Created At:</strong></div>
        <div class="col-sm-9"><%= @user.created_at.strftime('%B %d, %Y at %I:%M %p') %></div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-3"><strong>Updated At:</strong></div>
        <div class="col-sm-9"><%= @user.updated_at.strftime('%B %d, %Y at %I:%M %p') %></div>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-primary me-2' %>
      <%= link_to 'Back to Users', admin_users_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>