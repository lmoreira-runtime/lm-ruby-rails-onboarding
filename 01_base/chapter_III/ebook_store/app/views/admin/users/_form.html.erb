
<%= form_with(model: [:admin, @user], local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group mb-3">
    <%= form.label :email %>
    <%= form.email_field :email , class: 'form-control' %>
  </div>

  <div class="field form-group mb-3">
    <%= form.label :password %>
    <%= form.password_field :password , class: 'form-control' %>
  </div>

  <div class="field form-group mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation , class: 'form-control' %>
  </div>

  <div class="field form-group mb-3">
    <%= form.label :category %>
    <%= form.select :category, User.categories.keys, { prompt: 'Select a category' }, { class: 'form-select form-select-md mb-3' } %>
  </div>

  <div class="field form-group form-check">
    <%= form.label :status , class: 'form-check-label' %>
    <%= form.check_box :status , class: 'form-check-input' %>
  </div>
    <br>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>